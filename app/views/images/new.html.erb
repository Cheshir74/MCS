<h2>Upload Images</h2>

<%= form_for @image, :html => {:multipart => true} do |f| %>
  <% if @image.errors.any? %>
    <% @image.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :image_title %>
    <%= f.text_field :image_title, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :gallery %>
    <%= f.select :gallery_id, Gallery.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select one'}, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image_description %>
    <%= f.text_area :image_description, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, multiple: true %>
  </div>

  <br>
  <%= f.submit "Submit", class:'btn btn-primary' %>
<% end %>
