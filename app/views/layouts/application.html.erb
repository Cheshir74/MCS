<!DOCTYPE html>
<html>
<style>

  .bd-placeholder-img {
    font-size: 1.125rem;
    text-anchor: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

  @media (min-width: 768px) {
    .bd-placeholder-img-lg {
      font-size: 3.5rem;
    }

    main > .container {
      padding: 60px 15px 0;
    }

    .footer {
      background-color: #f5f5f5;
    }

    .footer > .container {
      padding-right: 15px;
      padding-left: 15px;
    }

    code {
      font-size: 80%;
    }


  }
</style>
  <head>

    <title>MCS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column h-100">

  <header>
    <!-- Fixed navbar -->
    <% if current_page?(home_path) %>
      <nav class="navbar navbar-expand-md navbar-dark fixed-top">
        <h5> <a class="navbar-brand" href="#"><%= link_to "Dmitriy Tolstosheev Photography", home_path %></a></h5>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
            <% @galleryNav.each do |gallery| %>
              <li class="nav-item"><a class="nav-link"><%= link_to gallery.name, gallery_path(gallery.id) %></a></li>
            <% end %>
          </ul>

              <% if current_user.nil? %>
                <%= link_to new_user_session_path, class: 'btn btn-outline-light' do %>Sign in<% end %>
              <% else %>
                <%= link_to destroy_user_session_path, class: 'btn btn-outline-light', method: :delete do %>Log out<% end %>
              <% end %>

        </div>
      </nav>

      </header>


      <% else %>
      <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="#">Fixed navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <span class="nav-link"><%= link_to "Home", home_path %> <span class="sr-only">(current)</span></span>
            </li>
            <% @galleryNav.each do |gallery| %>
              <li class="nav-item"><a class="nav-link"><%= link_to gallery.name, gallery_path(gallery.id) %></a></li>
            <% end %>


          </ul>
          <form class="form-inline mt-2 mt-md-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
              <% if current_user.nil? %>
                <%= link_to new_user_session_path, class: 'login-button' do %>Sign in<% end %>
              <% else %>
                <% if can? :manage, User %>
                  <li class="nav-item">
                    <a class="nav-link" href="#" tabindex="-1" aria-disabled="true"><%= link_to "Upload Photo", upload_path %></a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="#" tabindex="-1" aria-disabled="true"><%= link_to "New Gallery", new_gallery_path %></a>
                  </li>
                  <p>Visible only for superadmins and supervisors! </p>
                <% end %>
                <%= link_to destroy_user_session_path, method: :delete do %>Log out<% end %>
              <% end %></button>
          </form>
        </div>
      </nav>

      </header>

    <% end %>

    <!--
     <main role="main" class="flex-shrink-0">
      <div class="container"> -->


 <div id="toast-container">
  <% unless flash.empty? %>
    <script type="text/javascript">
        <% flash.each do |f| %>
        <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
        toastr['<%= type %>']('<%= f[1] %>');
        <% end %>
    </script>
  <% end %>
     </div>





    <%= yield %>

 <!-- </div>
  </main>-->
  </body>
</html>
